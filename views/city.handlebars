<div class="signees">

    <figure>
        <img src="/img/chicken-mcnugget.jpg" alt="fried chicken head">
    </figure>
    <h2>We, residents of {{cityName}}, demand that real chicken be used to make our chicken nuggets!</h2>

    <!-- [{"first_name":"Leonardo","last_name":"DiCaprio"},{"first_name":"Maggie","last_name":"Wiseman"}]
    -->
    <ul>
        {{#each results}}
        <li>{{#if this.homepage}}
            <a href="{{this.homepage}}">{{this.first_name}} {{this.last_name}} </a>
            {{else}}
                {{this.first_name}} {{this.last_name}}
            {{/if}}
            {{#if this.age}}
                 ({{this.age}})
            {{/if}}
        </li>
        {{/each}}
    </li>
</div>
