<div class="signees">

    <figure>
        <img src="/img/luke-syres-223433.jpg" alt="farm pic">
    </figure>
    <h2>We, the undersigned, have pledged to make a difference in our communities by eating local for 1 month!</h2>

    <ul>
        {{#each results}}
        <li>{{#if this.homepage}}
            <a href="{{this.homepage}}">{{this.first_name}} {{this.last_name}} </a>
            {{else}}
                {{this.first_name}} {{this.last_name}}
            {{/if}}
            {{#if this.age}}
                 ({{this.age}}{{#if this.city}}, <a href="/petition/signatures/{{this.city}}">{{this.city}}</a>{{/if}})
            {{else if this.city}}
                (<a href="/petition/signatures/{{this.city}}">{{this.city}}</a>)
            {{/if}}
        </li>
        {{/each}}
    </li>
</div>
